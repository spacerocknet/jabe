# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                              @controllers.Application.index


# JSON
GET     /v1/quiz/config                controllers.QuizConttroller.config
GET     /v1/quiz/categories            controllers.QuizConttroller.categories
GET     /v1/quiz/quan/:cat/:qid        controllers.QuizConttroller.details(cat: String, qid: Long)

POST    /v1/quiz/request               controllers.QuizConttroller.quizRequest
POST    /v1/quiz/result                controllers.QuizConttroller.gameResult
POST    /v1/quiz/save                  controllers.QuizConttroller.save
POST    /v1/quiz/savetest              controllers.QuizConttroller.savetest

#Subscriber
GET     /v1/subscribe/uuid              @controllers.SubscriberController.generateUniqId()
POST    /v1/subscribe/noinforegister    @controllers.SubscriberController.noInfoRegister()
GET     /v1/subcribe/fbregister         @controllers.SubscriberController.fbRegister()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                  controllers.Assets.at(path="/public", file)